<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="4dp">

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/wifi_data_usage_icon"
        app:tint="?attr/colorAccent" />
    <TextView style="@style/CustomTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="8sp" android:text="@string/preview_data_usage"/>
</LinearLayout>