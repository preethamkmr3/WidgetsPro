<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="dev.rikka.shizuku.permission.API_V23" />
    <uses-permission android:name="dev.rikka.shizuku.permission.REQUEST_API_V23" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission
        android:name="android.permission.BATTERY_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SYSTEM_EXEMPTED" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.ACCESS_CACHE_FILESYSTEM"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission
        android:name="android.permission.READ_MEDIA_IMAGES"
        tools:ignore="SelectedPhotoAccess" />
    <uses-permission
        android:name="android.permission.READ_MEDIA_VIDEO"
        tools:ignore="SelectedPhotoAccess" />
    <uses-permission
        android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />


    <queries>
        <intent>
            <action android:name="android.bluetooth.BluetoothAdapter.ACTION_REQUEST_ENABLE" />
        </intent>
        <intent>
            <action android:name="android.bluetooth.device.action.BATTERY_LEVEL_CHANGED" />
        </intent>
    </queries>

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WidgetsPro.Red.Light">

        <activity
            android:name=".PermissionActivity"
            android:exported="true"
            android:theme="@style/Theme.WidgetsPro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="false"></activity>

        <service
            android:name=".services.cpu.CpuMonitorService"
            android:exported="false"
            android:foregroundServiceType="systemExempted" />

        <receiver
            android:name=".widgets.cpu.CpuWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/cpu_widget_info" />
        </receiver>

        <service
            android:name=".services.battery.BatteryMonitorService"
            android:exported="false"
            android:foregroundServiceType="systemExempted" />

        <receiver
            android:name=".widgets.battery.BatteryWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/battery_widget_info" />
        </receiver>

        <receiver
            android:name=".widgets.caffeine.CaffeineWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/caffeine_widget_info" />
        </receiver>

        <receiver
            android:name=".widgets.caffeine.CaffeineToggleReceiver"
            android:exported="false" />

        <service
            android:name=".services.caffeine.CaffeineService"
            android:exported="false"
            android:foregroundServiceType="systemExempted" />

        <receiver
            android:name=".widgets.bluetooth.BluetoothWidgetProvider"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/bluetooth_widget_info" />
        </receiver>

        <receiver
            android:name=".widgets.bluetooth.BluetoothReceiver"
            android:excludeFromRecents="true"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.bluetooth.device.action.ACL_CONNECTED" />
                <action android:name="android.bluetooth.device.action.ACL_DISCONNECTED" />
                <action android:name="android.bluetooth.adapter.action.STATE_CHANGED" />
                <action android:name="android.bluetooth.device.action.BATTERY_LEVEL_CHANGED" />
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".widgets.bluetooth.BluetoothWidgetConfigActivity"
            android:exported="true"
            android:theme="@style/BluetoothConfigTheme">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".widgets.sun.SunTrackerWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/sun_tracker_info" />
        </receiver>

        <service
            android:name=".services.sun.SunSyncService"
            android:exported="false"
            android:foregroundServiceType="systemExempted" />

        <receiver
            android:name=".widgets.networkusage.NetworkSpeedWidgetProviderCircle"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/network_speed_widget_circle_info" />
        </receiver>

        <receiver
            android:name=".widgets.networkusage.NetworkSpeedWidgetProviderPill"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/network_speed_widget_pill_info" />
        </receiver>

        <service
            android:name=".services.networkusage.BaseNetworkSpeedWidgetService"
            android:exported="false"
            android:foregroundServiceType="systemExempted" />

        <receiver
            android:name=".utils.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".utils.UpdateReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".widgets.networkusage.WifiDataUsageWidgetProviderCircle"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/wifi_data_usage_widget_circle_info" />
        </receiver>

        <receiver
            android:name=".widgets.networkusage.WifiDataUsageWidgetProviderPill"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/wifi_data_usage_widget_pill_info" />
        </receiver>

        <receiver
            android:name=".widgets.networkusage.SimDataUsageWidgetProviderCircle"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/sim_data_usage_widget_circle_info" />
        </receiver>

        <receiver
            android:name=".widgets.networkusage.SimDataUsageWidgetProviderPill"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/sim_data_usage_widget_pill_info" />
        </receiver>

        <service
            android:name=".services.networkusage.BaseWifiDataUsageWidgetService"
            android:exported="false"
            android:foregroundServiceType="systemExempted" />

        <service
            android:name=".services.networkusage.BaseSimDataUsageWidgetService"
            android:exported="false"
            android:foregroundServiceType="systemExempted" />

        <receiver
            android:name=".widgets.notes.NoteWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/note_widget_info" />
        </receiver>

        <activity
            android:name=".services.notes.NoteWidgetInputService"
            android:excludeFromRecents="true"
            android:label="Notes"
            android:theme="@style/Theme.NotesWidget" />

        <provider
            android:name="rikka.shizuku.ShizukuProvider"
            android:authorities="${applicationId}.shizuku"
            android:enabled="true"
            android:exported="true"
            android:multiprocess="false"
            android:permission="android.permission.INTERACT_ACROSS_USERS_FULL" />

        <service
            android:name=".services.analogclock.AnalogClockUpdateService_1"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="systemExempted" />

        <receiver
            android:name=".widgets.analogclock.AnalogClockWidgetProvider_1"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="UPDATE_ANALOG_CLOCK" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/analog_1_widget_info" />
        </receiver>

        <service
            android:name=".services.analogclock.AnalogClockUpdateService_2"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="systemExempted" />

        <receiver
            android:name=".widgets.analogclock.AnalogClockWidgetProvider_2"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="UPDATE_ANALOG_CLOCK_2" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/analog_2_widget_info" />
        </receiver>

        <receiver
            android:name=".widgets.gif.GifWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/gif_widget_info" />
        </receiver>

        <service
            android:name=".services.gif.AnimationService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="systemExempted" />

        <service
            android:name=".services.LauncherStateAccessibilityService"
            android:exported="true"
            android:label="Launcher State Detection"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <receiver
            android:name=".widgets.music.MusicSimpleWidgetProvider"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.tpk.widgetspro.ACTION_PLAY_PAUSE" />
                <action android:name="com.tpk.widgetspro.ACTION_NEXT" />
                <action android:name="com.tpk.widgetspro.ACTION_PREVIOUS" />
                <action android:name="com.tpk.widgetspro.ACTION_MEDIA_UPDATE" />
                <action android:name="com.tpk.widgetspro.ACTION_REFRESH_VISUALIZER" />
                <action android:name="com.tpk.widgetspro.ACTION_REFRESH_VISUALIZER_ALL" />
                <action android:name="com.tpk.widgetspro.ACTION_TOGGLE_VISUALIZATION" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/music_simple_widget_info" />
        </receiver>

        <service
            android:name=".services.music.MediaMonitorService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="systemExempted"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>
    </application>
</manifest>